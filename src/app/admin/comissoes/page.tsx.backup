'use client'

import { useState, useCallback, useMemo } from 'react'
import { useStableData } from '@/hooks/use-stable-data'
import { useStableMutation } from '@/hooks/use-stable-mutation'
import { supabase } from '@/lib/supabase'
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card'
import { Button } from '@/components/ui/button'
import { Input } from '@/components/ui/input'
import { Badge } from '@/components/ui/badge'
import { Tabs, TabsContent, TabsList, TabsTrigger } from '@/components/ui/tabs'
import {
  Search, DollarSign, Check, X, Edit, Eye, Calendar,
  User, TrendingUp, AlertCircle, Clock, Calculator,
  CreditCard, Timer
} from 'lucide-react'

interface Comissao {
  id: string
  mentorado_id: string
  lead_id: string
  valor_comissao: number
  percentual_comissao?: number
  valor_venda: number
  data_venda: string
  observacoes: string
  status_pagamento?: string  // Mudan√ßa: era status, mas na DB √© status_pagamento
  created_at: string
  updated_at: string

  // Joins
  mentorados?: {
    nome_completo: string
    email: string
  }
  leads?: {
    nome_completo: string
    empresa: string | null
  }
  mentorado_nome?: string
  mentorado_email?: string
  lead_nome?: string
  lead_empresa?: string
}

interface ComissaoSplit {
  id: string
  mentorado_id: string
  lead_id: string
  valor_comissao: number  // Valor real da comiss√£o do banco
  percentual_comissao: number
  status_pagamento: 'pendente' | 'pago' | 'cancelado'  // Status real do banco
  data_venda: string
  data_pagamento?: string | null
  
  // Campos calculados para split
  valor_primeira_parte: number  // 50% - paga quando vende
  valor_segunda_parte: number   // 50% - paga quando cliente quita
  status_primeira_parte: 'pendente' | 'pago'
  status_segunda_parte: 'bloqueado' | 'liberado' | 'pago'
  cliente_quitou: boolean
  
  // Dados do lead
  leads?: {
    nome_completo: string
    valor_vendido: number | null
    valor_arrecadado: number | null
    status: string | null
  }
  
  // Dados do mentorado
  mentorados?: {
    nome_completo: string
    porcentagem_comissao: number
  }
}

export default function AdminComissoesPage() {
  const [activeTab, setActiveTab] = useState<'comissoes' | 'split'>('comissoes')
  const [searchTerm, setSearchTerm] = useState('')
  const [filterStatus, setFilterStatus] = useState<'todos' | 'pendente' | 'pago' | 'recusado' | 'cancelado'>('todos')
  const [selectedComissao, setSelectedComissao] = useState<Comissao | null>(null)
  const [showEditModal, setShowEditModal] = useState(false)
  const [showViewModal, setShowViewModal] = useState(false)
  const [editForm, setEditForm] = useState({
    valor_comissao: 0,
    percentual_comissao: 5,
    observacoes: ''
  })
  const [showGlobalConfigModal, setShowGlobalConfigModal] = useState(false)
  const [activeTabSplit, setActiveTabSplit] = useState<'primeira_parte' | 'segunda_parte' | 'todas'>('primeira_parte')

  // Use stable hook for commissions data
  const {
    data: rawComissoes,
    loading: comissoesLoading,
    error: comissoesError,
    refetch: refetchComissoes
  } = useStableData<any>({
    tableName: 'comissoes',
    select: `
      *,
      mentorados:mentorado_id (
        nome_completo,
        email
      ),
      leads:lead_id (
        nome_completo,
        empresa
      )
    `,
    dependencies: [],
    autoLoad: true,
    debounceMs: 300
  })

  // Buscar comiss√µes com dados dos leads para verificar pagamentos (para split)
  const {
    data: rawComissoesSplit,
    loading: comissoesSplitLoading,
    refetch: refetchComissoesSplit
  } = useStableData<any>({
    tableName: 'comissoes',
    select: `
      id,
      mentorado_id,
      lead_id,
      valor_comissao,
      percentual_comissao,
      status_pagamento,
      data_venda,
      data_pagamento,
      observacoes,
      leads:lead_id (
        nome_completo,
        valor_vendido,
        valor_arrecadado,
        status
      ),
      mentorados:mentorado_id (
        nome_completo,
        porcentagem_comissao
      )
    `,
    dependencies: [],
    autoLoad: true,
    debounceMs: 300
  })

  // Hook para pagar primeira parte
  const pagarPrimeiraParte = useStableMutation('comissoes', 'update', {
    onSuccess: () => refetchComissoesSplit()
  })

  // Hook para pagar segunda parte
  const pagarSegundaParte = useStableMutation('comissoes', 'update', {
    onSuccess: () => refetchComissoesSplit()
  })

  // Memoized commissions transformation
  const comissoes = useMemo(() => {
    if (!rawComissoes?.length) return []
    
    return rawComissoes.map(comissao => ({
      ...comissao,
      mentorado_nome: comissao.mentorados?.nome_completo,
      mentorado_email: comissao.mentorados?.email,
      lead_nome: comissao.leads?.nome_completo,
      lead_empresa: comissao.leads?.empresa,
    })) as Comissao[]
  }, [rawComissoes])

  // Stable mutations for commission operations
  const { mutate: mutateUpdateComissao, isLoading: isUpdatingComissao, error: updateError } = useStableMutation(
    'comissoes',
    'update',
    {
      onSuccess: async () => {
        await refetchComissoes()
      },
      debounceMs: 150
    }
  )

  // Transformar dados para sistema de split
  const comissoesSplit = useMemo(() => {
    if (!rawComissoesSplit?.length) return []
    
    return rawComissoesSplit.map(comissao => {
      const valorTotal = comissao.valor_comissao || 0
      const primeiraParte = valorTotal * 0.5  // 50%
      const segundaParte = valorTotal * 0.5   // 50%
      
      // Verificar se cliente j√° pagou tudo
      const lead = comissao.leads
      const clienteQuitou = lead && 
        lead.valor_vendido > 0 && 
        lead.valor_arrecadado >= lead.valor_vendido
      
      // Verificar split payments via observa√ß√µes (solu√ß√£o tempor√°ria)
      const observacoes = comissao.observacoes || ''
      const primeiraPagaPelaObservacao = observacoes.includes('SPLIT_PAYMENT:PRIMEIRA_PARTE_PAGA')
      const totalmentePagaPelaObservacao = observacoes.includes('SPLIT_PAYMENT:TOTALMENTE_PAGA')
      
      let statusPrimeiraParte: 'pendente' | 'pago'
      let statusSegundaParte: 'bloqueado' | 'liberado' | 'pago'
      
      if (comissao.status_pagamento === 'pago' || totalmentePagaPelaObservacao) {
        // Se est√° completamente pago, ambas as partes foram pagas
        statusPrimeiraParte = 'pago'
        statusSegundaParte = 'pago'
      } else if (primeiraPagaPelaObservacao) {
        // Primeira parte j√° foi paga, verificar se segunda pode ser liberada
        statusPrimeiraParte = 'pago'
        
        if (clienteQuitou) {
          statusSegundaParte = 'liberado'  // Cliente quitou, pode pagar segunda parte
        } else {
          statusSegundaParte = 'bloqueado' // Cliente ainda deve
        }
      } else {
        // Primeira parte ainda n√£o foi paga
        statusPrimeiraParte = 'pendente'
        statusSegundaParte = 'bloqueado' // Segunda parte fica bloqueada at√© primeira ser paga
      }

      return {
        id: comissao.id,
        mentorado_id: comissao.mentorado_id,
        lead_id: comissao.lead_id,
        valor_comissao: valorTotal,
        percentual_comissao: comissao.percentual_comissao,
        status_pagamento: comissao.status_pagamento,
        data_venda: comissao.data_venda,
        data_pagamento: comissao.data_pagamento,
        valor_primeira_parte: primeiraParte,
        valor_segunda_parte: segundaParte,
        status_primeira_parte: statusPrimeiraParte,
        status_segunda_parte: statusSegundaParte,
        cliente_quitou: clienteQuitou,
        leads: lead,
        mentorados: comissao.mentorados
      } as ComissaoSplit
    })
  }, [rawComissoesSplit])

  // Filtrar comiss√µes split por tab ativa
  const comissoesSplitFiltradas = useMemo(() => {
    switch (activeTabSplit) {
      case 'primeira_parte':
        return comissoesSplit.filter(c => c.status_primeira_parte === 'pendente')
      case 'segunda_parte':
        return comissoesSplit.filter(c => 
          c.status_primeira_parte === 'pago' && 
          c.status_segunda_parte === 'liberado'
        )
      case 'todas':
        return comissoesSplit
      default:
        return comissoesSplit
    }
  }, [comissoesSplit, activeTabSplit])

  // Estat√≠sticas para split
  const splitStats = useMemo(() => {
    const primeiraPendentes = comissoesSplit.filter(c => c.status_primeira_parte === 'pendente')
    const segundaLiberadas = comissoesSplit.filter(c => c.status_segunda_parte === 'liberado')
    const segundaBloqueadas = comissoesSplit.filter(c => c.status_segunda_parte === 'bloqueado')
    
    return {
      primeira_parte_pendente: {
        quantidade: primeiraPendentes.length,
        valor: primeiraPendentes.reduce((sum, c) => sum + c.valor_primeira_parte, 0)
      },
      segunda_parte_liberada: {
        quantidade: segundaLiberadas.length,
        valor: segundaLiberadas.reduce((sum, c) => sum + c.valor_segunda_parte, 0)
      },
      segunda_parte_bloqueada: {
        quantidade: segundaBloqueadas.length,
        valor: segundaBloqueadas.reduce((sum, c) => sum + c.valor_segunda_parte, 0)
      }
    }
  }, [comissoesSplit])

  const handlePagarPrimeiraParte = useCallback(async (comissaoId: string) => {
    // Por enquanto, vou usar o campo observacoes para rastrear split payments
    // Em produ√ß√£o, seria melhor adicionar campos espec√≠ficos na tabela
    await pagarPrimeiraParte.mutate({
      id: comissaoId,
      status_pagamento: 'pendente', // Mant√©m pendente, primeira parte paga
      observacoes: 'SPLIT_PAYMENT:PRIMEIRA_PARTE_PAGA:' + new Date().toISOString(),
      data_pagamento: null // Ainda n√£o completamente pago
    })
  }, [pagarPrimeiraParte])

  const handlePagarSegundaParte = useCallback(async (comissaoId: string) => {
    await pagarSegundaParte.mutate({
      id: comissaoId,
      status_pagamento: 'pago', // Agora completamente pago
      observacoes: 'SPLIT_PAYMENT:TOTALMENTE_PAGA:' + new Date().toISOString(),
      data_pagamento: new Date().toISOString()
    })
  }, [pagarSegundaParte])

  const aprovarComissao = useCallback(async (id: string) => {
    try {
      await mutateUpdateComissao({
        id,
        status_pagamento: 'pago',
        updated_at: new Date().toISOString()
      })
      
      console.log('‚úÖ Comiss√£o aprovada com sucesso')
      alert('Comiss√£o aprovada e marcada como paga!')
    } catch (error) {
      console.error('‚ùå Erro ao aprovar comiss√£o:', error)
      alert('Erro ao aprovar comiss√£o')
    }
  }, [mutateUpdateComissao])

  const recusarComissao = useCallback(async (id: string) => {
    try {
      const motivo = prompt('Motivo da recusa (opcional):')
      const comissao = comissoes.find(c => c.id === id)

      await mutateUpdateComissao({
        id,
        status_pagamento: 'recusado',
        observacoes: (comissao?.observacoes || '') + (motivo ? ` | RECUSADA: ${motivo}` : ' | RECUSADA'),
        updated_at: new Date().toISOString()
      })

      console.log('‚úÖ Comiss√£o recusada com sucesso')
      alert('Comiss√£o recusada!')
    } catch (error) {
      console.error('‚ùå Erro ao recusar comiss√£o:', error)
      alert('Erro ao recusar comiss√£o')
    }
  }, [mutateUpdateComissao, comissoes])

  const abrirModalEditar = useCallback((comissao: Comissao) => {
    console.log('‚úèÔ∏è Abrindo modal de edi√ß√£o para comiss√£o:', comissao.id)
    setSelectedComissao(comissao)
    setEditForm({
      valor_comissao: comissao.valor_comissao || 0,
      percentual_comissao: comissao.percentual_comissao || 5,
      observacoes: comissao.observacoes || ''
    })
    setShowEditModal(true)
  }, [])

  const calcularValorPorPercentual = useCallback((percentual: number, valorVenda: number) => {
    return (valorVenda * percentual) / 100
  }, [])

  const salvarEdicaoComissao = useCallback(async () => {
    if (!selectedComissao) return
    
    console.log('üîÑ Iniciando edi√ß√£o de comiss√£o...')
    
    try {
      await mutateUpdateComissao({
        id: selectedComissao.id,
        valor_comissao: editForm.valor_comissao,
        percentual_comissao: editForm.percentual_comissao,
        observacoes: editForm.observacoes,
        updated_at: new Date().toISOString()
      })

      console.log('‚úÖ Comiss√£o editada com sucesso')
      alert('Comiss√£o editada com sucesso!')
      setShowEditModal(false)
    } catch (error) {
      console.error('‚ùå Erro ao editar comiss√£o:', error)
      alert('Erro ao editar comiss√£o')
    }
  }, [selectedComissao, editForm, mutateUpdateComissao])

  const definirTodosCom5Porcento = useCallback(async () => {
    if (!confirm('Isso ir√° definir TODAS as comiss√µes pendentes para 5%. Continuar?')) {
      return
    }

    try {
      // Buscar apenas comiss√µes pendentes dos dados j√° carregados
      const comissoesPendentes = comissoes.filter(c => (c.status_pagamento || 'pendente') === 'pendente')
      
      // Atualizar cada comiss√£o com 5% do valor de venda
      for (const comissao of comissoesPendentes) {
        const novoValor = calcularValorPorPercentual(5, comissao.valor_venda)
        
        await mutateUpdateComissao({
          id: comissao.id,
          valor_comissao: novoValor,
          percentual_comissao: 5,
          updated_at: new Date().toISOString()
        })
      }

      alert(`‚úÖ ${comissoesPendentes.length} comiss√µes atualizadas para 5%!`)
      setShowGlobalConfigModal(false)

    } catch (error) {
      console.error('‚ùå Erro ao atualizar comiss√µes:', error)
      alert('Erro ao atualizar comiss√µes')
    }
  }, [comissoes, calcularValorPorPercentual, mutateUpdateComissao])

  const corrigirComissoesZeradas = useCallback(async () => {
    const comissoesZeradas = comissoes.filter(c => 
      (c.status_pagamento || 'pendente') === 'pendente' && 
      (c.valor_comissao || 0) === 0
    ).length

    if (!confirm(`Corrigir ${comissoesZeradas} comiss√µes zeradas para R$ 2.000,00 cada?`)) {
      return
    }

    try {
      const response = await fetch('/api/admin/fix-commissions', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        }
      })

      const result = await response.json()

      if (response.ok) {
        alert(`‚úÖ ${result.corrigidas || 0} comiss√µes corrigidas com sucesso!`)
        await refetchComissoes() // Use stable refetch instead
      } else {
        throw new Error(result.error || 'Erro na corre√ß√£o')
      }

    } catch (error: any) {
      console.error('‚ùå Erro ao corrigir comiss√µes:', error)
      alert(`‚ùå Erro: ${error.message}`)
    }
  }, [comissoes, refetchComissoes])

  const getStatusBadge = (status?: string) => {
    switch (status) {
      case 'pago':
        return <Badge className="bg-green-500 hover:bg-green-600">Pago</Badge>
      case 'recusado':
        return <Badge className="bg-red-500 hover:bg-red-600">Recusado</Badge>
      case 'cancelado':
        return <Badge className="bg-gray-500 hover:bg-gray-600">Cancelado</Badge>
      case 'pendente':
      default:
        return <Badge className="bg-yellow-500 hover:bg-yellow-600">Pendente</Badge>
    }
  }

  const formatCurrency = (value: number) => {
    return new Intl.NumberFormat('pt-BR', {
      style: 'currency',
      currency: 'BRL'
    }).format(value)
  }

  const getStatusBadgeSplit = (status: string, type: 'primeira' | 'segunda') => {
    if (type === 'primeira') {
      switch (status) {
        case 'pendente':
          return <Badge variant="outline" className="bg-yellow-100 text-yellow-700">Pendente</Badge>
        case 'pago':
          return <Badge variant="outline" className="bg-green-100 text-green-700">Pago</Badge>
        default:
          return <Badge variant="outline">Desconhecido</Badge>
      }
    } else {
      switch (status) {
        case 'bloqueado':
          return <Badge variant="outline" className="bg-red-100 text-red-700">Bloqueado</Badge>
        case 'liberado':
          return <Badge variant="outline" className="bg-blue-100 text-blue-700">Liberado</Badge>
        case 'pago':
          return <Badge variant="outline" className="bg-green-100 text-green-700">Pago</Badge>
        default:
          return <Badge variant="outline">Desconhecido</Badge>
      }
    }
  }

  const getProgressoCliente = (comissao: ComissaoSplit) => {
    const lead = comissao.leads
    if (!lead || !lead.valor_vendido) return 0
    
    const progresso = (lead.valor_arrecadado || 0) / lead.valor_vendido * 100
    return Math.min(progresso, 100)
  }

  const formatDate = useCallback((dateString: string) => {
    return new Date(dateString).toLocaleDateString('pt-BR', {
      day: '2-digit',
      month: '2-digit',
      year: 'numeric'
    })
  }, [])

  // Memoized filtered commissions
  const filteredComissoes = useMemo(() => {
    return comissoes.filter(comissao => {
      const matchesSearch = searchTerm.length === 0 || 
        comissao.mentorado_nome?.toLowerCase().includes(searchTerm.toLowerCase()) ||
        comissao.lead_nome?.toLowerCase().includes(searchTerm.toLowerCase()) ||
        comissao.observacoes?.toLowerCase().includes(searchTerm.toLowerCase())

      const matchesStatus = filterStatus === 'todos' || (comissao.status_pagamento || 'pendente') === filterStatus

      return matchesSearch && matchesStatus
    })
  }, [comissoes, searchTerm, filterStatus])

  // Memoized statistics calculation
  const stats = useMemo(() => ({
    total: comissoes.length,
    pendentes: comissoes.filter(c => (c.status_pagamento || 'pendente') === 'pendente').length,
    pagas: comissoes.filter(c => c.status_pagamento === 'pago').length,
    recusadas: comissoes.filter(c => c.status_pagamento === 'recusado').length,
    canceladas: comissoes.filter(c => c.status_pagamento === 'cancelado').length,
    totalValor: comissoes.reduce((acc, c) => acc + (c.valor_comissao || 0), 0),
    valorPendente: comissoes.filter(c => (c.status_pagamento || 'pendente') === 'pendente').reduce((acc, c) => acc + (c.valor_comissao || 0), 0),
    comissoesZeradas: comissoes.filter(c => (c.status_pagamento || 'pendente') === 'pendente' && (c.valor_comissao || 0) === 0).length
  }), [comissoes])

  // Combined loading state
  const loading = comissoesLoading || isUpdatingComissao

  return (
    <div className="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 p-6">
      <div className="max-w-7xl mx-auto space-y-6">
        {/* Header */}
        <div className="flex flex-col space-y-4">
          <div className="flex items-center justify-between">
            <div>
              <h1 className="text-3xl font-bold text-gray-900">Gest√£o de Comiss√µes</h1>
              <p className="text-gray-600 mt-1">Gerencie aprova√ß√µes, recusas e edi√ß√µes de comiss√µes</p>
            </div>
            <Button
              onClick={() => setShowGlobalConfigModal(true)}
              className="bg-blue-500 hover:bg-blue-600"
            >
              Configurar Comiss√µes
            </Button>
          </div>

          {/* Navigation Tabs */}
          <Tabs value={activeTab} onValueChange={(value: any) => setActiveTab(value)}>
            <TabsList className="grid w-full grid-cols-2">
              <TabsTrigger value="comissoes" className="flex items-center gap-2">
                <DollarSign className="w-4 h-4" />
                Comiss√µes Tradicionais
              </TabsTrigger>
              <TabsTrigger value="split" className="flex items-center gap-2">
                <Calculator className="w-4 h-4" />
                Sistema Split (50%+50%)
              </TabsTrigger>
            </TabsList>

            {/* Tab Content - Comiss√µes Tradicionais */}
            <TabsContent value="comissoes" className="space-y-6">

          {/* Stats Cards */}
          <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4">
            <Card>
              <CardContent className="p-4">
                <div className="flex items-center space-x-2">
                  <DollarSign className="w-5 h-5 text-blue-500" />
                  <div>
                    <p className="text-sm text-gray-600">Total Comiss√µes</p>
                    <p className="text-2xl font-bold">{stats.total}</p>
                  </div>
                </div>
              </CardContent>
            </Card>

            <Card>
              <CardContent className="p-4">
                <div className="flex items-center space-x-2">
                  <Clock className="w-5 h-5 text-yellow-500" />
                  <div>
                    <p className="text-sm text-gray-600">Pendentes</p>
                    <p className="text-2xl font-bold">{stats.pendentes}</p>
                  </div>
                </div>
              </CardContent>
            </Card>

            <Card>
              <CardContent className="p-4">
                <div className="flex items-center space-x-2">
                  <Check className="w-5 h-5 text-green-500" />
                  <div>
                    <p className="text-sm text-gray-600">Pagas</p>
                    <p className="text-2xl font-bold">{stats.pagas}</p>
                  </div>
                </div>
              </CardContent>
            </Card>

            <Card>
              <CardContent className="p-4">
                <div className="flex items-center space-x-2">
                  <X className="w-5 h-5 text-gray-500" />
                  <div>
                    <p className="text-sm text-gray-600">Canceladas</p>
                    <p className="text-2xl font-bold">{stats.canceladas}</p>
                  </div>
                </div>
              </CardContent>
            </Card>
            <Card>
              <CardContent className="p-4">
                <div className="flex items-center space-x-2">
                  <TrendingUp className="w-5 h-5 text-blue-500" />
                  <div>
                    <p className="text-sm text-gray-600">Valor Pendente</p>
                    <p className="text-lg font-bold">{formatCurrency(stats.valorPendente)}</p>
                  </div>
                </div>
              </CardContent>
            </Card>
          </div>

          {/* Alerta para comiss√µes zeradas */}
          {stats.comissoesZeradas > 0 && (
            <Card className="border-red-200 bg-red-50">
              <CardContent className="p-4">
                <div className="flex items-center justify-between">
                  <div className="flex items-center space-x-3">
                    <AlertCircle className="w-6 h-6 text-red-500" />
                    <div>
